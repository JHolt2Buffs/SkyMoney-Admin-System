@page
@model SkyMoney_Admin_System.Pages_UserAccounts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserAccount[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAccount[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAccount[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAccount[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAccount[0].IncomeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAccount[0].NextScheduledPayDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAccount[0].PayFrequencyLabel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserAccount)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IncomeType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NextScheduledPayDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayFrequency)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.UserAccountId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.UserAccountId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.UserAccountId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

@{
    var prevDisabled = "";
    var nextDisabled = "";

    if (Model.PageNum <= 1)
    {
        prevDisabled = "disabled";
    }
    if (Model.PageNum >= Model.TotalPages)
    {
        nextDisabled = "disabled";
    }


}

<nav aria-label="Page navigation example">
    <ul class='pagination'>
        <li class='page-item @prevDisabled'>
            <a class='page-link' asp-page='./index' asp-route-PageNum='@(Model.PageNum - 1)'>
                Previous
            </a>
        </li>
        <li clas='page-item @nextDisabled'>
            <a class='page-link' asp-page='./Index' asp-route-PageNum="@(Model.PageNum + 1)">
                Next
            </a>
        </li>
    </ul>
</nav>